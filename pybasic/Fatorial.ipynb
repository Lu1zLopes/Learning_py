    "num = int(input(\"digite um numero: \"))\n",
    "\n",
    "fat = num\n",
    "cont = 1\n",
    "\n",
    "while (num - cont) > 1:\n",
    "    fat = fat*(num - cont)\n",
    "    cont += 1\n",
    "    if (num - cont) == 0:\n",
    "        break\n",
    "if fat == 0:\n",
    "    fat = 1\n",
    "    \n",
    "print(\"{0}! = {1}\".format(num,fat))"
   ]
